
<div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
  <form id="editForm" method="post" action="/api/restaurant">
  <div class="space-y-12 sm:space-y-16">

    <div>
      <h2 class="text-base font-semibold leading-7 text-gray-900">Restaurant Information</h2>
      <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-600">Use a permanent address where you can receive mail.</p>
      <div class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:pb-0">
        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="restaurant_name" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Restaurant name</label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <input value="{{restaurant.name}}" type="text" name="restaurant_name" id="restaurant_name" autocomplete="given-name" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
          </div>
        </div>
        <div class="w-full sm:max-w-xs">
          <label for="rest_id" class="sr-only">Restaurant Id</label>
          <input type="hidden" value="{{rest_id}}" name="rest_id" id="rest_id" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Restaurant Id">
        </div>

         <div class="w-full sm:max-w-xs">
          <label for="rest_id" class="sr-only">Restaurant Id</label>
          <input type="hidden" value="post" name="method_type" id="method_type" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Restaurant Id">
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="cuisine" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Cuisine</label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <input value="{{restaurant.cuisine}}" type="text" name="cuisine" id="cuisine" autocomplete="family-name" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="borough" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Borough</label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <input value="{{restaurant.borough}}" id="borough" name="borough" autocomplete="borough" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-md sm:text-sm sm:leading-6">
          </div>
        </div>

         <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="building" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Building</label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <input value="{{restaurant.address.building}}" type="text" name="building" id="building" autocomplete="building" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xl sm:text-sm sm:leading-6">
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="street-address" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Street address</label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <input value="{{restaurant.address.street}}" type="text" name="street_address" id="street_address" autocomplete="street-address" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xl sm:text-sm sm:leading-6">
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
          <label for="postal-code" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">ZIP / Postal code</label>
          <div class="mt-2 sm:col-span-2 sm:mt-0">
            <input value="{{restaurant.address.zipcode}}" type="text" name="postal_code" id="postal_code" autocomplete="postal-code" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
          </div>
        </div>
      </div>
    
      <div>
        <h2 class="text-base font-semibold leading-7 text-gray-900">Grades</h2>
        <div class="flex flex-col mt-10 space-y-8">
          <!-- Grade Input Fields -->
          {{#each restaurant.grades}}
              <div class="flex justify-between">
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                  <label for="grade-date" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Date</label>
                  <div class="mt-2 sm:col-span-2 sm:mt-0">
                    <input type="text" name="grade_date" value="{{this.date}}" id="grade-date" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
                  </div>
                </div>

                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                  <label for="grade-grade" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Grade</label>
                  <div class="mt-2 sm:col-span-2 sm:mt-0">
                    <input type="text" name="grade_grade" value="{{this.grade}}" id="grade-grade" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
                  </div>
                </div>

                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                  <label for="grade-score" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Score</label>
                  <div class="mt-2 sm:col-span-2 sm:mt-0">
                    <input type="number" name="grade_score" value="{{this.score}}" id="grade-score" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
                  </div>
                </div>
              </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center justify-end gap-x-6">
    <a href="/">
      <button type="button" class="text-sm font-semibold leading-6 text-gray-900">Cancel</button>
    </a>
    <button type="submit" class="inline-flex justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" value="delete">Delete</button>
    <button type="submit" class="inline-flex justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" value="update">Update</button>
  </div>
</form>
</div>

<script>
document.getElementById('editForm').addEventListener('submit', function(event) {
  event.preventDefault(); 
  // Prevent the form from submitting
  
  const restId = document.getElementById('rest_id').value;
 const clickedButton = event.submitter;
//const form = this;
console.log("clicked button"+clickedButton.name);
console.log("clicked value"+clickedButton.value);
  const formAction = `/api/restaurant/${restId}`;

  
  if(clickedButton.value === 'update')
  {
    document.getElementById('editForm').setAttribute('method', 'post'); 
    document.getElementById('editForm').setAttribute('action', formAction);
    //form.method = 'POST';
    document.getElementById('method_type').value="update";
    //form.action = formAction;
  }
  else
  {
    //form.method = 'DELETE';
    //form.method = 'POST';
    //form.action = formAction;
    document.getElementById('method_type').value="delete";
    //form.method = 'POST';
    //form.action = formAction;
    document.getElementById('editForm').setAttribute('method', 'post');
    document.getElementById('editForm').setAttribute('action', formAction);
  }
  
  // Now you can submit the form
  this.submit();
});
</script>

